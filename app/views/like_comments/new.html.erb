<!-- 読み込むscssファイル -->
<%= stylesheet_link_tag "like_comments/new", :media => "all" %>

<main class="main">
  <div class="for-background">
    <div class="container-wrapper">
        <div class="containers">
          <div class="top-container">
            <div class="spot-images">
              <% @spot.spot_images.first(1).each do |image| %>
                <%= attachment_image_tag image, :image, class: "slide-image" %>
              <% end %>
              <div id="spot-name">
                <%= @spot.spot_name %>
              </div>
              <div class="spot-introduce">
                <%= @spot.spot_introduce %> <!-- スライドショーの矢印を少し上に設置する -->
              </div>
            </div>
          </div>
          <div class="form-container">
            <div class="contents">
              <%= form_for @like_comment, :url => {:action => 'create'} do |f| %>
                <div class="form-title">
                  <h1>口コミ　新規投稿</h1>
                </div>
                <div class="field">
                  <%= f.label :title, "タイトル", class: "title" %><span>※</span><br />
                  <%= f.text_field :title, autofocus: true, autocomplete: false, placeholder: "30文字以内で入力してください。", class: "textfield" %>
                </div>

                <div class="field">
                  <%= f.label :text, "内容", class: "text" %><span>※</span><br />
                  <%= f.text_area :text, autofocus: true, autocomplete: false, placeholder: "200文字以内で入力してください", class: "textarea" %>
                </div>

                <div type="submit" id="submit">
                  <%= f.submit "投稿する", class: "button" %><br>
                  <%= link_to "前に戻る", spot_path(@spot.id) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</main>