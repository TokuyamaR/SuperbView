<!-- 読み込むscssファイル -->
<%= stylesheet_link_tag "like_comments/index", :media => "all" %>

<main class="main">
  <div class="for-background">
    <div class="container-wrapper">
        <div class="containers">
          <div class="top-container">
          	<div class="spot-name">
              <h2>スポット名</h2> <!-- どのスポットに対する口コミかわかるようにするため、マップの左上に表示 -->
            </div>
            <div class="spot-image">
              スポットの画像
            </div>
          </div>
          <div class="main-container">
            <div class="page-title">
            	<h2>口コミ一覧</h2>
            	<hr class="hr">
            </div>
            <div class="like-comments-all">
              <% if @like_comments.empty? %>
                <p>口コミはまだありません。</p>
                <p>最初の<%= link_to "口コミを投稿", new_spot_like_comment_path %>しませんか？</p>
              <% else %>
                <%= @like_comments.first(5).each do |like_comment| %>
                  <ul>
                    <li class="likecomments-container">
                    	<div class="left-contents">
                    		<div class="user-image">ユーザー画像</div>
                        <div class="user-name">ユーザー名</div>
                    	</div>
                    	<div class="right-contents">
                    		<div class="up-contents">
                    			<p class="comment-title">タイトル名</p>
                          <% if administrator_signed_in? %>
                            <span>
                              <%= link_to admin_destroy_like_comment_path(like_comment), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                                <i class="far fa-trash-alt">削除</i>
                              <% end %>
                            </span>
                          <% elsif current_user.id == like_comment.user_id %>
                            <span>
                              <%= link_to spot_path(like_comment), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                                <i class="far fa-trash-alt">削除</i>
                              <% end %>
                            </span>
                          <% end %>
                    		</div>
                    		<div class="down-contents">
                    			<div class="comment-text">内容</div>
                    		</div>
                    	</div>
                    </li>
                  </ul>
                <% end %>
              <% end %>
            </div>
            <div class="pagination">
            	<%= paginate @like_comments %>
            	<%= @like_comments.total_count %>件中<%= @like_comments.offset_value %>〜<%= @like_comments.offset_value + @like_comments.length %>件を表示しています。
            </div>
          </div>
        </div>
    </div>
  </div>
</main>