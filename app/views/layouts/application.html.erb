<!DOCTYPE html>
<html>
  <head>
    <title>SuperbView</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyDkZm6gzF2ZQ08PLB8qe-K77ATfMWLAZsU"></script>
  </head>

  <body>
    <% if @header_flag != true %>
    <!-- 管理者ヘッダー -->
    <% if administrator_signed_in? %>
      <header class="header clearfix">
        <div class="header-container">
          <!-- 管理者は投稿一覧があるため検索フォームなし -->
          <p>管理者でログイン中</p>
          <div class="app-title">
            <%= link_to 'アプリタイトル', root_path %>
          </div>
          <!-- ナビゲーション -->
          <div id="gnavi" class="header-menus">
            <ul class="header-menus">
              <li><%= link_to '新規投稿', admin_new_spot_path, class: "" %></li>
              <li><%= link_to '投稿一覧', admin_spots_path, class: "" %></li>
              <li><%= link_to 'ユーザー一覧', admin_users_path, class: "" %></li>
              <li><%= link_to '口コミ一覧', admin_like_comments_path, class: "" %></li>
              <li><%= link_to '管理者ログアウト', destroy_administrator_session_path, method: :delete,
                   "data-confirm" => "本当にログアウトしますか？", class: "" %>
              </li>
            </ul>
          </div>
        </div>
      </header>

    <% else %>
    <!-- ユーザーヘッダー -->
    <!-- ユーザーのみサインインもしくはサインインしていない場合 -->
      <header class="header clearfix">
        <div class="header-container">
          <!-- 検索フォーム -->
          <div class="header-search">
            <%= form_tag spots_path, :method => 'get', :id => "search-form" do %>
                <%= text_field_tag :search, params[:search], :placeholder => "国名を入力", :id => "search-box" %>
                <%= submit_tag "検索", :station => nil, :id => "search-btn" %>
                <% if user_signed_in? %>
                  <%= @user.name %>でログイン中
                <% end %>
            <% end %>
          </div>
          <div class="app-title">
            <% if user_signed_in? %>
              <%= link_to 'アプリタイトル', root_path %>
            <% else %>
              <%= link_to 'アプリタイトル', root_path %>
            <% end %>
          </div>
          <!-- ナビゲーション -->
          <div id="gnavi" class="header-menus">
            <ul class="header-menus">
              <% if user_signed_in? %>
                <li><%= link_to '新規投稿', new_spot_path, class: "" %></li>
                <li><%= link_to 'マイページ', user_show_likes_path(current_user.id), class: "" %></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,
                     "data-confirm" => "本当にログアウトしますか？", class: "" %></li>
              <% else %>
                <li><%= link_to 'ログイン', new_user_session_path, class: "" %></li>
                <li><%= link_to '会員登録', new_user_registration_path, class: "" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </header>
    <% end %>

    <!-- フラッシュメッセージ　-->
    <% if alert %>
      <div class="alert-text hide">
        <p class="alert alert-danger"><%= alert %></p>
      </div>
    <% end %>
    <% if notice %>
      <div class="alert-text hide">
        <p class="alert notice"><%= notice %></p>
      </div>
    <% end %>
    <% end %>

    <%= yield %>

    <% if @footer_flag != true %>
    <!-- フッター -->
    <div class="clearfix"></div>
      <footer class="clearfix">
        <div class="footer-contents">
          <%= link_to '利用規約', root_path, class: "service-info" %>
          <%= link_to 'プライバシーポリシー', root_path, class: "privacy-info" %>
          <%= link_to 'お問い合わせ先', root_path, class: "contact-info" %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete,
                       "data-confirm" => "本当にログアウトしますか？", class: "footer-sign-out" %>
        <% if user_signed_in? %>
          <%= link_to '退会', user_path(current_user.id),
                       "data-confirm" => "本当に退会しますか？", class: "unsubscribe" %>
        <% end %>
        </div>
        <div class="copyright">
           <p>©︎ 2018 Infratop.inc</p>
        </div>
      </footer>
    <% end %>
  </body>
</html>
