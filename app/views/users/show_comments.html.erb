<!-- 読み込むscssファイル -->
<%= stylesheet_link_tag "users/show_comments", :media => "all" %>

<main class="main">
  <div class="for-background">
    <div class="container-wrapper">
        <div class="containers">
          <div class="top-container">
          	<div class="left-contents">
	          	<div class="user-image">ユーザー画像</div>
	        </div>
	        <div class="right-contents">
	        	<div class="user-name">ユーザー名</div><span>編集アイコン（歯車）</span>
	        	<div class="user-introduce">自己紹介分</div>
	        </div>
          </div>
          <div class="main-container">
            <div class="page-title">
            	<h2>いいね　一覧</h2>
            	<h2>口コミ　一覧</h2>
            </div>
            <div class="comments-all">
              <% if @like_comments.empty? %>
                <p>口コミがまだありません</p>
                <p><%= link_to "絶景", top_path %>をみんなに共有してみませんか？</p>
              <% else %>
                <%= @like_comments.first(5).each do |spot| %>
                  <ul>
                    <li class="spots-container">
                    	<div class="left-contents">
                    		<div class="spot-image">スポット画像</div>
                    	</div>
                    	<div class="right-contents">
                    		<div class="up-contents">
                    			<div class="comment-title">タイトル</div>>
                    			<div class="edit">編集ボタン</div>
                          <div class="delete">削除ボタン</div>
                    		</div>
                    		<div class="down-contents">
                    			<div class="comment-tezt">口コミの内容</div>
                    		</div>
                    	</div>
                    </li>
                  </ul>
                <% end %>
              <% end %>
            </div>
            <div class="pagination">
            	<%= paginate @like_comments %>
            	<%= @like_comments.total_count %>件中<%= @like_comments.offset_value %>〜<%= @like_comments.offset_value + @like_comments.length %>件を表示しています。
            </div>
          </div>
        </div>
    </div>
  </div>
</main>
