<!-- 読み込むscssファイル -->
<%= stylesheet_link_tag "users/sessions/new", :media => "all" %>

<main class="main">
  <div class="for-background">
    <div class="container-wrapper">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="containers">
          <div class="form-title">
            <div class="sign-up">
              <%= link_to "新規登録", new_user_registration_path %>
            </div>
            <div class="sign-in active">
              ログイン
            </div>
          </div>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例：gotrip@trip.com", size: "30" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "8文字以上", size: "30" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログイン状態を保持する" %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>
