<!-- 読み込むscssファイル -->
<%= stylesheet_link_tag "users/admin_edit", :media => "all" %>

<main class="main">
  <div class="for-background">
    <div class="container-wrapper">
    	<%= form_for @user do |f| %>
	    	<div class="containers">
	            <div class="left-container">
	          	    <div class="contents left">
		          	    <div class="user-image field">
			          	    <% if @user.user_image %>
			          	    	<%= attachment_image_tag @user, :user_image, :fill, 150, 150, format: 'jpeg' %><br>
			                <% else %>
			                  	<%= image_tag "/anything/no_user_image.png", :size => "200x200", :alt => "ユーザー画像" %>
			                <% end %>
			          	    <%= f.label :user_image, "プロフィール画像" %><br />
				            <%= f.attachment_field :user_image %>
		          		</div>
		            </div>
	            </div>
	            <div class="right-container">
		          	<div class="contents right">
	          			<div class="field">
				            <%= f.label :name, "ユーザー名" %><span>※</span><br />
				            <%= f.text_field :name, autofocus: true, autocomplete: false, placeholder: "例：絶景マン", size: "30", class:'u-field' %>
				        </div>
				        <div class="field">
				            <%= f.label :introduce, "自己紹介" %><br />
				            <%= f.text_area :introduce, autofocus: true, autocomplete: false, placeholder: "200文字以内で入力してください", size: "30x7", class:'u-field' %>
				        </div>
				        <div class="field">
				            <%= f.label :email, "メールアドレス" %><br />
				            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例：gotrip@trip.com", size: "30", class:'u-field' %>
				        </div>
			            <div type="submit" id="submit">
				            <%= f.submit "編集する" %><br>
				            <%= link_to "マイページに戻る", user_show_likes_path %>
				        </div>
		            </div>
	      		</div>
	    	</div>
	    <% end %>
    </div>
  </div>
</main>
